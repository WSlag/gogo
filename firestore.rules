rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ==========================================
    // PRODUCTION RULES - Active
    // ==========================================

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidUser() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Role checks using Custom Claims (preferred) with Firestore fallback
    function getUserRole() {
      return request.auth.token.role != null
        ? request.auth.token.role
        : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function hasRole(role) {
      return isAuthenticated() && getUserRole() == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isDriver() {
      return hasRole('driver');
    }

    function isMerchant() {
      return hasRole('merchant');
    }

    function isCustomer() {
      return hasRole('customer');
    }

    function hasAnyRole(roles) {
      return isAuthenticated() && getUserRole() in roles;
    }

    // Check if the authenticated user owns the merchant (by userId field or phone number)
    function isMerchantOwner(merchantId) {
      let merchant = get(/databases/$(database)/documents/merchants/$(merchantId)).data;
      return merchant != null && (
        merchant.userId == request.auth.uid ||
        merchant.userId == request.auth.token.phone_number
      );
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      // Allow role update only for registration (customer -> driver/merchant)
      // Users can update role if: no current role, or upgrading from customer
      allow update: if isOwner(userId) && (
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) ||
        // Allow setting role during registration if current role is customer/null
        (resource.data.role == null || resource.data.role == 'customer')
      ) || isAdmin();
      allow delete: if isAdmin();

      // User notifications subcollection
      match /notifications/{notificationId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isAdmin();
        allow update: if isOwner(userId) || isAdmin();
        allow delete: if isOwner(userId) || isAdmin();
      }
    }

    // Drivers collection
    match /drivers/{driverId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(driverId);
      allow update: if isOwner(driverId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Merchants collection
    match /merchants/{merchantId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        resource.data.userId == request.auth.token.phone_number ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Products collection
    match /products/{productId} {
      allow read: if true;
      allow create: if isMerchant() || isAdmin();
      allow update: if isMerchant() || isAdmin();
      allow delete: if isAdmin();
    }

    // Rides collection
    match /rides/{rideId} {
      allow read: if isAuthenticated() && (
        resource.data.passengerId == request.auth.uid ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isAuthenticated() && request.resource.data.passengerId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.passengerId == request.auth.uid ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if false;
    }

    // Orders collection
    // Note: merchantUserId is stored in orders for permission checking without get() calls
    // This allows queries to work properly (isMerchantOwner with get() fails in query context)
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.merchantId == request.auth.uid ||
        resource.data.merchantUserId == request.auth.uid ||
        resource.data.merchantUserId == request.auth.token.phone_number ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isAuthenticated() && request.resource.data.customerId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.merchantId == request.auth.uid ||
        resource.data.merchantUserId == request.auth.uid ||
        resource.data.merchantUserId == request.auth.token.phone_number ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if false;
    }

    // Transactions collection
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }

    // Promos collection
    match /promos/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAdmin() || isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Chat messages collection
    // Chats must have a 'participants' array containing user IDs
    match /chats/{chatId} {
      // Helper to check if user is a participant in this chat
      function isChatParticipant() {
        return isAuthenticated() && (
          request.auth.uid in resource.data.participants ||
          request.auth.token.phone_number in resource.data.participants
        );
      }

      // Helper for create - check if user is adding themselves as participant
      function isValidChatCreate() {
        return isAuthenticated() &&
          request.auth.uid in request.resource.data.participants;
      }

      allow read: if isChatParticipant() || isAdmin();
      allow create: if isValidChatCreate();
      allow update: if isChatParticipant() || isAdmin();
      allow delete: if false;

      // Messages subcollection - inherit parent chat's participant check
      match /messages/{messageId} {
        // Check if user is participant by reading parent chat document
        function isParentChatParticipant() {
          let chat = get(/databases/$(database)/documents/chats/$(chatId)).data;
          return isAuthenticated() && (
            request.auth.uid in chat.participants ||
            request.auth.token.phone_number in chat.participants
          );
        }

        // For create, also verify senderId matches the authenticated user
        function isValidMessageCreate() {
          return isParentChatParticipant() &&
            request.resource.data.senderId == request.auth.uid;
        }

        allow read: if isParentChatParticipant() || isAdmin();
        allow create: if isValidMessageCreate();
        allow update: if false;  // Messages are immutable
        allow delete: if false;
      }
    }
  }
}
