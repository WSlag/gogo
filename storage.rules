rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isImageFile() {
      return request.resource.contentType.matches('image/.*');
    }

    function isUnder5MB() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Profile images
    match /profile-images/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) && isImageFile() && isUnder5MB();
      allow delete: if isOwner(userId);
    }

    // Driver documents
    match /driver-documents/{driverId}/{document} {
      allow read: if isOwner(driverId);
      allow write: if isOwner(driverId) && isUnder5MB();
      allow delete: if isOwner(driverId);
    }

    // Merchant assets
    match /merchants/{merchantId}/{asset} {
      allow read: if true;
      allow write: if false; // Only admin can upload
    }

    // Product images
    match /products/{productId}/{image} {
      allow read: if true;
      allow write: if false; // Only admin can upload
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
