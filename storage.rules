rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isImageFile() {
      return request.resource.contentType.matches('image/.*');
    }

    function isUnder5MB() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Profile images (legacy path)
    match /profile-images/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) && isImageFile() && isUnder5MB();
      allow delete: if isOwner(userId);
    }

    // User images (profile and general uploads)
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId) && isImageFile() && isUnder5MB();
      allow delete: if isOwner(userId);
    }

    // Driver documents (legacy path)
    match /driver-documents/{driverId}/{document} {
      allow read: if isOwner(driverId);
      allow write: if isOwner(driverId) && isUnder5MB();
      allow delete: if isOwner(driverId);
    }

    // Driver documents and vehicle photos (new path used by code)
    match /drivers/{driverId}/{allPaths=**} {
      allow read: if isOwner(driverId);
      allow write: if isOwner(driverId) && isUnder5MB();
      allow delete: if isOwner(driverId);
    }

    // Merchant documents during registration (before merchant ID exists)
    match /merchant-applications/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isImageFile() && isUnder5MB();
      allow delete: if isOwner(userId);
    }

    // Merchant assets (logo, banner, products after approval)
    match /merchants/{merchantId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(merchantId) && isImageFile() && isUnder5MB();
    }

    // Product images
    match /products/{productId}/{image} {
      allow read: if true;
      allow write: if false; // Only admin can upload
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
